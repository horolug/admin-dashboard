<div class="border-b border-gray-900/10 pb-12">
  <h2 class="text-base/7 font-semibold text-gray-900">
    Device Details
  </h2>
  <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-6">
    <div class="sm:col-span-3">
      <label
        for="company-name"
        class="block text-sm/6 font-medium text-gray-900"
      >
        Device Number
      </label>
      <div class="mt-2">
        <input
          type="text"
          name="company-name"
          id="company-name"
          autocomplete="given-name"
          class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
        />
      </div>
    </div>
    <div class="sm:col-span-3">
      <legend class="block text-sm/6 font-medium text-gray-900">
        Location
      </legend>
      <div class="mt-2 grid grid-cols-3">
        <div class="-mr-px -mt-px">
          <input
            type="text"
            id="lat-input"
            name="lat-input"
            aria-label="Expiration date"
            class="block w-full rounded-bl-md rounded-tl-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:relative focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
            placeholder="LAT"
          />
        </div>
        <div class="-mt-px">
          <input
            type="text"
            id="lng-input"
            name="lat-input"
            aria-label="CVC"
            class="block w-full bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:relative focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
            placeholder="LNG"
          />
        </div>

         <div class="-mt-px">
            <button type="button" id="getCoordinates" class="rounded-br-md w-full rounded-tr-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Get my coordinates</button>
        </div>
      </div>


    </div>
    <div class="sm:col-span-3">
      <label
        for="company-name"
        class="block text-sm/6 font-medium text-gray-900"
      >
        Customer (autocomplete ?)
      </label>
      <div class="mt-2">
        <input
          type="text"
          name="company-name"
          id="company-name"
          autocomplete="given-name"
          class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
        />
      </div>
    </div>
      <div class="sm:col-span-3">
      <label
        for="company-name"
        class="block text-sm/6 font-medium text-gray-900"
      >
        Project (autocomplete ?)
      </label>
      <div class="mt-2">
        <input
          type="text"
          name="company-name"
          id="company-name"
          autocomplete="given-name"
          class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
        />
      </div>
    </div>
    <div class="sm:col-span-3">
      <label
        for="company-name"
        class="block text-sm/6 font-medium text-gray-900"
      >
        Installation Date
      </label>
      <div class="mt-2">
        <input
          type="date"
          name="company-name"
          id="company-name"
          autocomplete="given-name"
          class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
        />
      </div>
    </div>
  </div>

  {{> content/cards/prev-next-buttons showPrevStep=true}}

</div>